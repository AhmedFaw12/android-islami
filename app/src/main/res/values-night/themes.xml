<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Islami" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorDarkBlue</item>
        <item name="colorPrimaryVariant">@color/colorDarkBlue</item>
        <item name="colorOnPrimary">@color/colorGoldForDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="bottom_navigation_style" parent="Theme.Islami">
        <item name="backgroundTint">@color/colorDarkBlue</item>
    </style>

    <style name="sura_content_style" parent="Theme.Islami">
        <item name="android:textColor">@color/colorGoldForDark</item>
    </style>

    <style name="toolbar_title_style" parent="Theme.Islami">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ic_arrow_style" parent="Theme.Islami">
        <item name="android:src">@drawable/back_arrow_night</item>
    </style>

    <style name="hadeth_border_style" parent="Theme.Islami">
        <item name="android:background">@color/colorGoldForDark</item>
    </style>

    <style name="general_text_style" parent="Theme.Islami">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tasbeeh_text_style" parent="Theme.Islami">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
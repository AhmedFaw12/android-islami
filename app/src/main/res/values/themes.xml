<resources
    xmlns:tools="http://schemas.android.com/tools"
    >
    <!-- Base application theme. -->
    <style name="Theme.Islami" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorGold</item>
        <item name="colorPrimaryVariant">#957A53</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    
    <style name="bottom_navigation_style" parent="Theme.Islami">
        <item name="backgroundTint">@color/colorGold</item>
    </style>

    <style name="sura_content_style" parent="Theme.Islami">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="toolbar_title_style" parent="Theme.Islami">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ic_arrow_style" parent="Theme.Islami">
        <item name="android:src">@drawable/back_arrow</item>
    </style>

    <style name="hadeth_border_style" parent="Theme.Islami">
        <item name="android:background">@color/colorGold</item>
    </style>

    <style name="general_text_style" parent="Theme.Islami">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tasbeeh_text_style" parent="Theme.Islami">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>